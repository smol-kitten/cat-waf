#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/app/node_modules/.pnpm/svelte-check@3.8.6_postcss-load-config@3.1.4_postcss@8.5.6__postcss@8.5.6_svelte@4.2.20/node_modules/svelte-check/bin/node_modules:/app/node_modules/.pnpm/svelte-check@3.8.6_postcss-load-config@3.1.4_postcss@8.5.6__postcss@8.5.6_svelte@4.2.20/node_modules/svelte-check/node_modules:/app/node_modules/.pnpm/svelte-check@3.8.6_postcss-load-config@3.1.4_postcss@8.5.6__postcss@8.5.6_svelte@4.2.20/node_modules:/app/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/app/node_modules/.pnpm/svelte-check@3.8.6_postcss-load-config@3.1.4_postcss@8.5.6__postcss@8.5.6_svelte@4.2.20/node_modules/svelte-check/bin/node_modules:/app/node_modules/.pnpm/svelte-check@3.8.6_postcss-load-config@3.1.4_postcss@8.5.6__postcss@8.5.6_svelte@4.2.20/node_modules/svelte-check/node_modules:/app/node_modules/.pnpm/svelte-check@3.8.6_postcss-load-config@3.1.4_postcss@8.5.6__postcss@8.5.6_svelte@4.2.20/node_modules:/app/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../svelte-check/bin/svelte-check" "$@"
else
  exec node  "$basedir/../svelte-check/bin/svelte-check" "$@"
fi
