# Database Configuration, wont be exposed so can be anything
DB_ROOT_PASSWORD=your_root_password_here
DB_PASSWORD=your_waf_password_here

# ACME Configuration
ACME_EMAIL=admin@yourdomain.com
ACME_PROVIDER=letsencrypt  # Options: letsencrypt, zerossl
ZEROSSL_API_KEY=  # Required if using ZeroSSL

# Dashboard Configuration, you will need this to login
DASHBOARD_API_KEY=your_secure_api_key_here

# Cloudflare Configuration (optional)
# CF_API_KEY and CF_EMAIL are used for:
#   1. ACME DNS-01 challenge (certificate generation)
#   2. Zone auto-detection (if CLOUDFLARE_API_TOKEN not set)
CF_API_KEY=
CF_EMAIL=

# Cloudflare Zone Auto-Detection (optional, recommended)
# Create API Token at: https://dash.cloudflare.com/profile/api-tokens
# Required permission: Zone → Zone → Read
# If not set, will fall back to CF_API_KEY + CF_EMAIL above
CLOUDFLARE_API_TOKEN=

# Timezone Configuration (optional, defaults to Europe/Berlin)
TZ=Europe/Berlin

# MaxMind GeoIP Configuration (optional)
# Get free license key at: https://www.maxmind.com/en/geolite2/signup
# If set, GeoLite2-City database will be automatically downloaded
MAXMIND_ACCOUNT_ID=
MAXMIND_LICENSE_KEY=